<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginLeft="10dp"
    android:background="#ffffff"
    android:orientation="vertical"
    android:layout_marginRight="10dp"
    android:layout_marginTop="6dp"
    android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:background="@drawable/topshape"
            android:gravity="center|left"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:layout_marginLeft="15dp"
                android:padding="2dp"
                android:textColor="#ffffff"
                android:textSize="12sp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
                android:text="subject"
                android:id="@+id/myposts_subject"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="left"
            android:gravity="left"
            android:padding="5dp"
            android:background="#ececec"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="catagory"
                android:textSize="12sp"
                android:gravity="left"
                android:id="@+id/myposts_catagory"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  , "/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="catagory_sub"
                android:textSize="12sp"
                android:gravity="left"
                android:id="@+id/myposts_catagory_sub"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
                />
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="left"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="title"
                android:gravity="right"
                android:layout_marginRight="5dp"
                android:layout_toRightOf="@+id/myposts_titlex"
                android:id="@+id/myposts_title"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Subject: "
                android:textColor="#d2574c"
                android:id="@+id/myposts_titlex"
                android:layout_alignParentLeft="true"
                android:textStyle="bold"
                android:gravity="right"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="left"
            android:layout_marginBottom="5dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="title"
                android:gravity="left"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/myposts_commentx"
                android:id="@+id/myposts_comment"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description: "
                android:textColor="#d2574c"
                android:id="@+id/myposts_commentx"
                android:layout_alignParentLeft="true"
                android:textStyle="bold"
                android:gravity="right"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
                />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="right"
            android:background="#01b1b1"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:textSize="12sp"
                android:padding="2dp"
                android:layout_marginRight="5dp"
                android:textColor="#ffffff"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
                android:text="stat"
                android:id="@+id/myposts_stat"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:textSize="12sp"
                android:padding="2dp"
                android:layout_marginRight="5dp"
                android:textColor="#ffffff"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
                android:text="ØŒ"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:textSize="12sp"
                android:layout_marginRight="5dp"
                android:padding="2dp"
                android:textColor="#ffffff"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
                android:text="state"
                android:id="@+id/myposts_state"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:background="#6e6e6e"
            android:layout_height="10dp"/>

</LinearLayout>